@model Despensometro2.Models.ProdutoVencendoList

@{
    ViewBag.Title = "Estoque";
}

<div class="parallax-container" style="height:200px;">
    <div class="section no-pad-bot center">
        <h2 class="teal-text">Produtos em Vencimento</h2>
    </div>
    <div class="parallax">
        <img src="~/Imagens/looking_labels.jpg" style="display:block; transform:translate3d(-50%, 603px, 0px)">
    </div>
</div>
<div class="section white">
    <div class="card-panel z-depth-3" style="padding: 0px">
        <div class="row">
            <div class="col s12">
                <div class="col s12 m6 l6 offset-l3 offset-m3">
                    <div class="input-field">
                        <i class="material-icons prefix">search</i>
                        <input id="icon_prefix" onkeyup="filtra()" type="text" class="tooltipped" data-position="top" data-delay="50" data-tooltip="Procure por produtos">
                        <label for="icon_prefix">Produto</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="container">
                <table class="striped responsive-table z-depth-5 centered">
                    <thead>
                        <tr>
                            <th data-field="produto-nome">Produto</th>
                            <th data-field="data-vencimento">Vencimento</th>
                            <th data-field="status">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int cont = 0;}

                        @foreach (var obj in ViewBag.produtosVencendo.produto)
                        {
                            <tr>
                                <td>
                                    @obj.produto_nome
                                </td>
                                <td>
                                    @if (ViewBag.produtosVencendo.produto_estoque[cont] != null)
                                    {
                                        @ViewBag.produtosVencendo.produto_estoque[cont].data_vencimento.Date.ToShortDateString()

                                        cont++;
                                    }
                                    else
                                    {
                                        @: -
                                   }
                                </td>
                                <td>
                                    <div class="tag indigo lighten-1" style=" border-radius: 5%;">
                                        <strong class="white-text">Vencendo</strong>
                                    </div>

                                </td>
                                <td>
                                    <a class="waves-effect waves-light btn modal-trigger" href="">Detalhes</a>
                                </td>
                            </tr>
                        }

                        @{cont = 0;}

                        @foreach (var obj in ViewBag.produtosVencido.produto)
                        {
                            <tr>
                                <td>
                                    @obj.produto_nome
                                </td>
                                <td>
                                    @if (ViewBag.produtosVencido.produto_estoque[cont] != null)
                                    {
                                        @ViewBag.produtosVencido.produto_estoque[cont].data_vencimento.Date.ToShortDateString()

                                        cont++;
                                    }
                                    else
                                    {
                                        @: -
                                   }
                                </td>

                                <td>
                                    <div class="tag red lighten-1" style=" border-radius: 5%;">
                                        <strong class="white-text">Vencido</strong>
                                    </div>
                                </td>
                                <td>
                                    <a class="waves-effect waves-light btn modal-trigger" href="">Detalhes</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

            <div class="row">
                <div class="col s12 m8 l8 offset-l4 offset-m2">
                    <ul class="pagination">
                        <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
                        <li class="active"><a href="#!">1</a></li>
                        <li class="waves-effect"><a href="#!">2</a></li>
                        <li class="waves-effect"><a href="#!">3</a></li>
                        <li class="waves-effect"><a href="#!">4</a></li>
                        <li class="waves-effect"><a href="#!">5</a></li>
                        <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
                    </ul>
                </div>

            </div>

        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('.parallax').parallax();
    });
</script>




