@model Despensometro2.Models.produto

@{
    ViewBag.Title = "Editar Produto";
}

@{
    var categorias = ViewBag.categorias;
}

<div class="parallax-container" style="height:200px;">
    <div class="section no-pad-bot center">
        <h2 class="teal-text">Editar Produtos</h2>
    </div>
    <div class="parallax">
        <img src="~/Imagens/looking_labels.jpg" style="display:block; transform:translate3d(-50%, 603px, 0px)">
    </div>
</div>
<div class="section white">
    <div class="card-panel z-depth-3" style="padding: 0px">
    </div>
    <div class="row">
        <div class="col s12">
            <div class="container">
                <div class="row">
                    @{ var obj = Model.produto_nome;
                    }
    @using (Html.BeginForm("EditarProduto", "Produto", FormMethod.Post))
    {
                    <div class="card hoverable white">
                        <div class="card-content">
                            <span class="card-title teal-text form">Editar Produto</span>
                            
                            <div class="row">
                                @Html.HiddenFor(model => Model.produto_id)
                                <div class="input-field col s12 l6 m6">
                                    @Html.EditorFor(model => Model.produto_nome)
                                    @Html.LabelFor(model => Model.produto_nome, "Nome do Produto")
                                </div>
                                <div class="input-field col s12 l6 m6">
                                    @Html.EditorFor(model => Model.fabricante.nome_fabricante)
                                    @Html.LabelFor(model => Model.fabricante.nome_fabricante, "Nome do Fabricante")
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12 l6 m6">
                                   @Html.DropDownListFor(m => m.tipo_id, (IEnumerable<SelectListItem>)ViewBag.categorias)
                                    <label>Categoria</label>
                                </div>
                                <div class="input-field col s12 l6 m6">
                                    @Html.EditorFor(model => Model.sabor)
                                    @Html.LabelFor(model => Model.sabor, "Sabor")
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12 l6 m6">
                                    @Html.EditorFor(model => Model.produto_peso)
                                    @Html.LabelFor(model => Model.produto_peso, "Peso")
                                </div>
                                <div class="input-field col s12 l6 m6">
                                    @Html.EditorFor(model => Model.numero_ean)
                                    @Html.LabelFor(model => Model.numero_ean, "Número do Código de Barras")
                                </div>
                            </div>
                        </div>
                        <div class="card-action">
                            <div class="row">
                                <div class="col s12">
                                    <div class="col s6 m6 l9">
                                        <a href="/Produto/Index" class="btn waves-effect waves-light right hide-on-small-and-down red lighten-1" name="action" style="color:#fff">
                                            Cancelar
                                            <i class="material-icons right">cancel</i>
                                        </a>
                                        <a href="/Produto/Index" class="btn-floating btn-large waves-effect waves-light red lighten-1 hide-on-med-and-up right">
                                            <i class="material-icons">cancel</i>
                                        </a>
                                    </div>
                                    <div class="col s6 m6 l3">
                                        <button class="btn waves-effect waves-light left hide-on-small-and-down" type="submit" name="action">
                                            Salvar
                                            <i class="material-icons right">check</i>
                                        </button>
                                        <button class="btn-floating btn-large waves-effect waves-light teal lighten-1 hide-on-med-and-up left"  type="submit">
                                            <i class="material-icons">check</i>
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>
                                         
                    </div> 
                                            }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.parallax').parallax();
    });
    $(document).ready(function () {
        $('select').material_select();
    });

    function resposta() {

        @if(ViewBag.resposta == true){

            @:Materialize.toast("Produto atualizado com sucesso :)", 5000);
        } else if(ViewBag.resposta == false) {
            @:Materialize.toast("O produto não pode ser atualizado :(", 5000);
        }
    }

